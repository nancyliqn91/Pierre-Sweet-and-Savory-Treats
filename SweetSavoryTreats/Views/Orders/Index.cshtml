@{
  Layout = "_Layout";
}

@using SweetSavoryTreats.Models;

<h1>Orders</h1>

@if (@Model.Count == 0)
{
  <h3>No orders have been added yet!</h3>
} 

<ul>
  @foreach(Order order in Model)
  {
    <li>@Html.ActionLink($"{order.OrderContent}", "Details", new { id = order.OrderId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new order", "Create")</p>
<p>@Html.ActionLink("Create a treat", "Create", "Treats")</p>

