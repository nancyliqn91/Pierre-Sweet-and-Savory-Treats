@{
  Layout = "_Layout";
}

@using SweetSavoryTreats.Models;

<h1>@User.Identity.Name's Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new treat", "Create", "Treats")</p>
<p>@Html.ActionLink("Create a flavor", "Create")</p>
<p>@Html.ActionLink("Flavors Index", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>